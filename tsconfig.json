{
  "compilerOptions": {
    "target": "ES6",                      
    "module": "ESNext",                    
    "jsx": "react-jsx",                    
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   
    "baseUrl": "./src",                     
    "paths": {                              
      "@/*": ["./*"]
    }
  },
  "include": ["src"],                   
  "exclude": ["node_modules", "build"]  
}

